    color Color
    rounded_rectangle X, Y, W, H, 40
    text_box X, Y, W-5, H-5,
        style "caption-white"
        render Body


anim_step               -> 0
anim_step_selected      -> 0.0
anim_step Step:integer  ->
// ----------------------------------------------------------------------------
//   Change the animation step
// ----------------------------------------------------------------------------
    if Step <> anim_step then
        anim_step := Step
        refresh 0.1

anim X:real -> X
anim X:real, Values ->
// ----------------------------------------------------------------------------
//    Compute animated value
// ----------------------------------------------------------------------------
    anim_step_selected := X
    anim_select X, Values
    if X in anim_step_selected-0.1..anim_step_selected+0.1 then
        X := anim_step_selected
    else
        interpolate 10%, anim_step_selected, X
    X + 0.0


anim_select X:real, S:integer = TX:real ->
// ----------------------------------------------------------------------------
//   Compute an animated value that sets X to TX at step S
// ----------------------------------------------------------------------------
    if anim_step >= S then
        anim_step_selected := TX
    X + 0.0


anim_select X:real, S:integer = TX:real, Rest ->
// ----------------------------------------------------------------------------
//   Compute animated value in a list
// ----------------------------------------------------------------------------
    anim_select X, S = TX
    anim_select X, Rest


check_refresh ->
// ----------------------------------------------------------------------------
//   Check if we have overly-eager refresh
// ----------------------------------------------------------------------------
    counter -> 0
    writeln "Refresh ", counter, " step=", smooth_step
    counter := counter + 1



// ============================================================================
//
//    Parse tree generation
//
// ============================================================================

tao_dx  -> 40
tao_dy  -> -60
tao_w   -> 200
tao_h   -> 50
tao_px  -> 0
tao_py  -> 0


tao_integer N:integer ->
// ----------------------------------------------------------------------------
//   Draw an integer node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "red", N


tao_real R:real ->
// ----------------------------------------------------------------------------
//   Draw a real node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "orange", R


tao_text T:text ->
// ----------------------------------------------------------------------------
//   Draw a text node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "yellow", T


tao_name N:text ->
// ----------------------------------------------------------------------------
//   Draw a name node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "green", N


tao_infix Name:text, Body ->
// ----------------------------------------------------------------------------
//   Infix node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "ocean", Name
    translate tao_dx, tao_dy, 0
    Body
    translate -tao_dx, 0, 0


tao_prefix Body ->
// ----------------------------------------------------------------------------
//   Prefix node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "sky", "Prefix"
    translate tao_dx, tao_dy, 0
    Body
    translate -tao_dx, 0, 0


tao_postfix Body ->
// ----------------------------------------------------------------------------
//   Postfix node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "navy", "Postfix"
    translate tao_dx, tao_dy, 0
    Body
    translate -tao_dx, 0, 0


tao_block Name:text, Body ->
// ----------------------------------------------------------------------------
//   Block node
// ----------------------------------------------------------------------------
    soft_box 0, 0, tao_w, tao_h, tao "purple", Name
    translate tao_dx, tao_dy, 0
    Body
    translate -tao_dx, 0, 0


tao_left Body ->
// ----------------------------------------------------------------------------
//   Draw the left node
// ----------------------------------------------------------------------------
    text_box 0, 0, tao_w, tao_h,
        color "#559"
        text "Left"
    Body
    translate 0, tao_dy, 0


tao_right Body ->
// ----------------------------------------------------------------------------
//   Draw the right node
// ----------------------------------------------------------------------------
    text_box 0, 0, tao_w, tao_h,
        color "#595"
        text "Left"
    Body
