//   Voronoise setup
//
// ============================================================================

ShaderKind      -> 0.0
ShaderSmooth    -> 0.0
ShaderRed1      -> 0.0
ShaderGreen1    -> 0.0
ShaderBlue1     -> 0.0
ShaderRed2      -> 0.0
ShaderGreen2    -> 0.0
ShaderBlue2     -> 0.0
ShaderRedS      -> 0.0
ShaderGreenS    -> 0.0
ShaderBlueS     -> 0.0

voronoise_shift R, G, B ->
    interpolate 4%, R, ShaderRedS
    interpolate 6%, G, ShaderGreenS
    interpolate 8%, B, ShaderBlueS

voronoise_color1 R, G, B ->
    interpolate 4.2%, R, ShaderRed1
    interpolate 6.3%, G, ShaderGreen1
    interpolate 8.5%, B, ShaderBlue1

voronoise_color2 R, G, B ->
    interpolate 5.1%, R, ShaderRed2
    interpolate 7.11%, G, ShaderGreen2
    interpolate 9.111%, B, ShaderBlue2

voronoise_kind Kind ->
    interpolate 3.66342%, Kind, ShaderKind

voronoise_smooth Smooth ->
    interpolate 3.323123%, Smooth, ShaderSmooth

